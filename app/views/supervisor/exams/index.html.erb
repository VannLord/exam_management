<% provide :title, t("exams.title.all") %>
<h1><%= t("exams.title.all") %></h1>
<div class="row">
  <%= search_form_for @q, class: "input-group search-box" do |f| %>
    <%= f.text_field :name_or_subject_name_cont, class: "form-control", placeholder: t("exams.search_for") %>
    <span class="input-group-btn">
      <%= f.submit t("exams.search"), class: "btn btn-default" %>
    </span>
  <% end %>
</div>
<div class="exam-container">
  <table class="table">
    <thead>
      <tr>
        <th class="exam_name">
          <%= sort_link(@q, :name) do %>
            <strong>
              <%= t("exams.name") %>
            </strong>
          <% end %>
        </th>
        <th class="exam_subject">
          <%= sort_link(@q, :subject_id) do %>
            <strong>
              <%= t("exams.subject") %>
            </strong>
          <% end %>
        </th>
        <th class="exam_create_time">
          <%= sort_link(@q, :created_at) do %>
            <strong>
              <%= t("exams.create_time") %>
            </strong>
          <% end %>
        </th>
        <th class="exam_duration">
          <%= sort_link(@q, :time) do %>
            <strong>
              <%= t("exams.duration") %>
            </strong>
          <% end %>
        </th>
        <th class="exam_question_number">
          <%= sort_link(@q, :total_number_questions) do %>
            <strong>
              <%= t("exams.total_questions") %>
            </strong>
          <% end %>
        </th>
        <th class="exam_view"><%= t("exams.view") %></th>
        <th class="exam_edit"><%= t("exams.edit") %></th>
        <th class="exam_delete"><%= t("exams.delete") %></th>
      </tr>
    </thead>
    <%= render(@exams) || t("exams.no_result_was_found_html") %>
  </table>
  <div class="pagination-container">
    <%= will_paginate @collection, previous_label: t("previous"), next_label: t("next")%>
  </div>
</div>
