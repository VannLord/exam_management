<% provide :title, t("index.edit") %>
<h1><%= t "index.edit" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user do |f| %>
      <%= render "supervisor/shared/error_messages", resource: f.object %>
      <div class="form-row">
        <%= f.label :name, t("index.name") %>
        <%= f.text_field :name %>
      </div>
      <div class="form-row">
        <%= f.label :email %>
        <%= f.email_field :email %>
      </div>
      <%= f.submit t("confirm"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
